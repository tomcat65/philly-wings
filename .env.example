# Firebase Configuration - Required for the web app
# Copy this file to .env and replace with your actual values
VITE_FIREBASE_API_KEY=YOUR_API_KEY_HERE
VITE_FIREBASE_AUTH_DOMAIN=YOUR_AUTH_DOMAIN_HERE
VITE_FIREBASE_PROJECT_ID=YOUR_PROJECT_ID_HERE
VITE_FIREBASE_STORAGE_BUCKET=YOUR_STORAGE_BUCKET_HERE
VITE_FIREBASE_MESSAGING_SENDER_ID=YOUR_SENDER_ID_HERE
VITE_FIREBASE_APP_ID=YOUR_APP_ID_HERE
VITE_FIREBASE_MEASUREMENT_ID=YOUR_MEASUREMENT_ID_HERE

# Admin Configuration
VITE_ADMIN_EMAIL=admin@phillywingsexpress.com

# Server-side Configuration (for Node.js scripts)
FIREBASE_PROJECT_ID=philly-wings

# Optional: Service Account Path (for admin scripts)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
